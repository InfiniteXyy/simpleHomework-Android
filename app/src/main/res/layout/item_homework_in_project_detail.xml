<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="homework"
            type="com.xyy.simplehomework.entity.Homework" />
        <variable
            name="clickHandler"
            type="com.xyy.simplehomework.view.handler.HomeworkClickHandler" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@android:color/white"
        android:layout_marginBottom="1dp">
        <ImageView
            android:id="@+id/image_homework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="16dp"
            app:srcCompat="@drawable/ic_create_white_24px"
            android:onClick="@{(view)->clickHandler.showDetail(view, homework.id)}"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/image_homework"
            android:layout_marginLeft="59dp"
            android:layout_marginStart="59dp"
            android:paddingLeft="16dp"
            android:text="@{homework.detail}"
            android:textColor="@color/japanDark"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:onClick="@{clickHandler::showMenu}"
            app:srcCompat="@drawable/ic_more_vert_black_24px" />
    </RelativeLayout>

</layout>
