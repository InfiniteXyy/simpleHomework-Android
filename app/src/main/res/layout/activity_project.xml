<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <import type="com.xyy.simplehomework.view.helper.DateHelper" />
        <import type="com.xyy.simplehomework.entity.MyProject" />
        <variable
            name="date"
            type="com.xyy.simplehomework.view.helper.TitleSwitcher" />
        <variable
            name="project"
            type="MyProject" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:transitionName="sharedCard"
            app:cardBackgroundColor="@color/japanBrown"
            app:cardCornerRadius="9dp"
            app:cardElevation="9dp"
            bind:cardColor="@{project}"></android.support.v7.widget.CardView>
    </FrameLayout>
</layout>
