<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="project"
            type="com.xyy.simplehomework.entity.MyProject" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="9dp"
        app:cardElevation="9dp"
        bind:cardBackgroundColor="@{project}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/subject_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_word_padding"
                android:layout_marginTop="17dp"
                android:maxLines="1"
                android:text="周三下午 5-6 节"
                android:textColor="#cfc8c8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/subject_detail"
                android:layout_marginLeft="@dimen/card_word_padding"
                android:layout_marginStart="@dimen/card_word_padding"
                android:layout_marginTop="-2dp"
                android:maxLines="1"
                android:text="@{project.subjectName}"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/project_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignLeft="@+id/subject_name"
                android:layout_alignStart="@+id/subject_name"
                android:layout_below="@+id/subject_name"
                android:layout_marginTop="24dp"
                app:srcCompat="@drawable/ic_filter_none_24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/project_img"
                android:layout_marginLeft="@dimen/card_detail_margin_left"
                android:layout_marginStart="@dimen/card_detail_margin_left"
                android:layout_marginTop="-2dp"
                android:layout_toEndOf="@+id/project_img"
                android:layout_toRightOf="@+id/project_img"
                android:text="课本 P15 题号 1, 5, 7"
                android:textColor="#EEEEEE"
                android:textSize="@dimen/card_detail_font_size" />

            <ImageView
                android:id="@+id/time_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignLeft="@+id/subject_name"
                android:layout_alignStart="@+id/subject_name"
                android:layout_below="@+id/project_img"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_access_alarms_24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/time_img"
                android:layout_marginLeft="@dimen/card_detail_margin_left"
                android:layout_marginTop="-2dp"
                android:layout_toEndOf="@+id/time_img"
                android:layout_toRightOf="@id/time_img"
                android:text='@{"状态" + project.status}'
                android:textColor="#EEEEEE"
                android:textSize="@dimen/card_detail_font_size" />

            <Button
                android:id="@+id/card_btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:padding="8dp"
                android:text="Delete"
                android:textColor="@android:color/white" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
