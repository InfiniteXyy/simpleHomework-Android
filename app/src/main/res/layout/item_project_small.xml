<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.xyy.simplehomework.entity.MyProject" />

        <import type="com.xyy.simplehomework.entity.Homework" />

        <import type="com.xyy.simplehomework.entity.MySubject" />

        <import type="android.graphics.Color" />

        <variable
            name="smallProject"
            type="MyProject" />

        <variable
            name="subject"
            type="MySubject" />

        <variable
            name="projectClick"
            type="com.xyy.simplehomework.view.handler.ProjectClickHandler" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/small_project_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:layout_marginTop="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="9dp"
        bind:cardColor="@{smallProject}"
        bind:cardElevation="@{smallProject}">

        <TextView
            android:id="@+id/smallSubjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="@{subject.name}"
            android:textColor="@{smallProject.homework.size() == 0 ? Color.GRAY : Color.WHITE}"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/showAllHomework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:onClick="@{(view)->projectClick.showDetail(view, smallProject.id)}"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_chevron_right_white_24px" />


    </android.support.v7.widget.CardView>
</layout>
