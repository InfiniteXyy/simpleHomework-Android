<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="testSubject"
            type="com.xyy.simplehomework.entity.MySubject" />
        <variable
            name="clickHandler"
            type="com.xyy.simplehomework.handler.TestHandler" />

    </data>
    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/bg">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_setting" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@{testSubject.name}"
            android:textSize="60sp"
            android:id="@+id/editTextTest" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="@{testSubject.name}"
            android:textSize="60sp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="23dp"
            android:onClick="@{clickHandler::onClickDemo}" />

    </RelativeLayout>
</layout>


