<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View" />
        <variable
            name="handler"
            type="com.xyy.simplehomework.view.handler.ProjectClickHandler" />

        <variable
            name="homework"
            type="com.xyy.simplehomework.entity.Homework" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="176dp"
                    android:background="@color/textDarkDisabled"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/ic_close_white_24px"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"/>
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="24dp"
                    android:text="完成一张卷子"
                    android:textColor="@color/textDarkPrimary"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:text='截止日期：明天'
                    android:textColor="@color/textDarkSecondary"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:text='@{homework.planDate == null ? "" : "计划日期：明天"}'
                    android:textColor="@color/textDarkSecondary"
                    android:textSize="14sp"
                    android:visibility="@{homework.planDate == null ? View.GONE : View.VISIBLE}"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <Button
                    android:id="@+id/start_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{(view) -> handler.setPlan(view, homework)}"
                    android:text='@{homework.planDate == null ? "设置计划" : "更改计划"}'
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>
