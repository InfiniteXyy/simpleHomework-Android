<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xyy.simplehomework.view.fragments.week.AddDialog.HomeworkAddDialog">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/dividerColor" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_photo_camera_white_24px" />
        </FrameLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_page"
            android:layout_width="match_parent"
            android:layout_height="240dp">
        </android.support.v4.view.ViewPager>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                app:ci_animator="@anim/indicator_animator"
                app:ci_animator_reverse="@anim/indicator_animator_reverse"
                app:ci_drawable="@drawable/black_radius_square"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:ci_height="4dp"
                app:ci_margin="6dp"
                app:ci_width="10dp"/>
            <Button
                android:id="@+id/button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end"
                android:text="添加"
                android:textColor="@color/colorBtn" />
        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
