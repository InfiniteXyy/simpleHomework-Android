<resources>

    <!-- Base application theme. -->
    <style name="Theme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/japanAir</item>
        <item name="colorAccent">#3498db</item>
        <item name="android:windowBackground">@drawable/default_background</item>
        <item name="android:dividerHorizontal">@drawable/line_divider</item>
        <item name="android:listDivider">@drawable/line_divider</item>
    </style>

    <style name="Theme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/japanTea</item>
        <item name="colorAccent">@color/japanTea</item>
        <item name="android:windowBackground">@drawable/default_background</item>
        <item name="android:dividerHorizontal">@drawable/line_divider</item>
        <item name="android:listDivider">@drawable/line_divider</item>
    </style>

    <style name="Theme3" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/japanBrown</item>
        <item name="colorAccent">@color/japanBrown</item>
        <item name="android:windowBackground">@drawable/default_background</item>
        <item name="android:dividerHorizontal">@drawable/line_divider</item>
        <item name="android:listDivider">@drawable/line_divider</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/japanAir</item>
        <item name="android:windowAnimationStyle">@style/BottomFloatAnim</item>
    </style>

    <style name="InfoDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BottomFloatAnim">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="SlideAnim">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="textSwitcher" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="whiteTitle" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullScreenDialogStyleSlide" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/SlideAnim</item>
    </style>
</resources>
