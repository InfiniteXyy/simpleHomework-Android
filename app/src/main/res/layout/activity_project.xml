<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="com.xyy.simplehomework.view.helper.DateHelper" />

        <import type="com.xyy.simplehomework.entity.MyProject" />

        <import type="com.xyy.simplehomework.entity.MySubject" />

        <variable
            name="project"
            type="MyProject" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title='@{"WEEK" + DateHelper.weekIndex}'></android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:transitionName="sharedCard"
            app:cardBackgroundColor="@color/japanBrown"
            app:cardCornerRadius="9dp"
            app:cardElevation="9dp"
            bind:cardColor="@{project}">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@{project.subject.getTarget().name}"
                    android:textColor="@android:color/white"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:transitionName="sharedTitle" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/project_detail_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="16dp">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/choose_project_recycler"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <!--</android.support.v7.widget.RecyclerView>-->

    </android.support.design.widget.CoordinatorLayout>
</layout>
